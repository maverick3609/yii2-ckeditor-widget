{
    "name": "maverick/yii2-ckeditor",
    "description": "CKEditor widget for Yii2.",
    "type": "yii2-extension",
    "keywords": [
        "2amigos",
        "yii",
        "yii2",
        "yii 2",
        "extension",
        "widget",
        "ckeditor"
    ],
    "homepage": "http://yiiwheels.com/extension/ckeditor-widget",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Deep Jyot Singh (aka maverick)",
            "email": "deep.jyotsingh@gmail.com",
            "role": "Head Developer"
        }
    ],
    "require": {
        "yiisoft/yii2": "~2.0.0"
    },
    "require-dev": {
        "phpunit/phpunit": "4.*"
    },
    "autoload": {
        "psr-4": {
            "maverick\\ckeditor\\": "src"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "asset-installer-paths": {
            "bower-asset-library": "vendor/bower"
        }
    }
}
